package estructurasdecontrol;
import java.util.*;
public class EJercicioPractico {

	public static void main(String[] args) {

		Scanner es= new Scanner(System.in);
		int edad;
		boolean porta= true;
		String genero;
		
		System.out.println("APP PARA ENTRAR AL ESTABLECIMIENTO");
		System.out.println("Ingres su edad");
		edad=es.nextInt();
		System.out.println("Ingrese su genero  H = Hombre / M= Mujer");
		genero=es.next();
		System.out.println("Porta Algun Arma?");
		porta=es.nextBoolean();
		
		if(edad < 18 || porta) {
			System.out.println("No puede entrar al establecimiento");
		}
		
		
		
	}

}
